doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/styles.css')
  title Document
h1.title PRODUCTOS FORM
form(onsubmit='return addMessage(this)')
  ul
    li
      label(for='name') T&iacute;tulo:
      input#title(type='text' name='title')
    li
      label(for='name') Precio:
      input#price(type='number' name='price')
    li
      label(for='name') Descripci&oacute;n:
      input#thumbnail(type='text' name='thumbnail')
    li.button
      button#enviar(type='submit') Guardar producto
#messages

        h2(class="title")="Lista items"

        table(class="table")
            thead(class="thead")
                tr(class="thead__tr")
                    th(class="thead__th")="Producto"
                    th(class="thead__th")="Precio"
                    th(class="thead__th")="Imagen"
            tbody
                each val in response
                    tr(class="tr")
                        th(class="tr__th")=val.title
                        td(class="tr__td")=val.price
                        td(class="tr__td")
                            img(src=val.thumbnail)
script(src='/socket.io/socket.io.js')
script(src='main.js')
