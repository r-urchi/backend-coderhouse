<h2>Lista items</h2>

<table class="table">
    <thead class="table__thead">
        <tr class="table__tr">
            <th class="table__th">Producto</th>
            <th class="col">Precio</th>
            <th class="col">Imagen</th>
        </tr>
    </thead>
    <tbody>
        {{#each response}}
        <tr>
            <th class="row">{{title}}</th>
            <td>{{price}}</td>
            <td><img src="{{thumbnail}}"></td>
        </tr>
        {{/each}}
    </tbody>
</table>